<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:background="@color/logo_background">

        <homeservices.david.com.homeservices.views.AmountControls
            android:layout_width="match_parent"
            android:layout_height="match_parent"></homeservices.david.com.homeservices.views.AmountControls>

    </LinearLayout>

    <homeservices.david.com.homeservices.models.IndicatorLayout
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"/>

    </homeservices.david.com.homeservices.models.IndicatorLayout>





    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="29">

    </android.support.v4.view.ViewPager>



</LinearLayout>
